{# default Sliding pagination control implementation #}

<div class="text-center">
    <ul class="pagination-custom list-unstyled list-inline">
{% if pageCount > 1 %}
    {% if first is defined and current != first %}
    <li>
        <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" class="btn btn-sm btn-default"><<</a>
    </li>
    {% endif %}

    {% if previous is defined %}
    <li><a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" class="btn btn-sm btn-default"><</a></li>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" class="btn btn-sm btn-default">{{ page }}</a>
            </li>
        {% else %}
            <li><a href="#" class="btn btn-sm btn-primary">{{ page }}</a></li>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
    <li>
        <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" class="btn btn-sm btn-default">>></a>
    </li>
    {% endif %}

    {% if last is defined and current != last %}
    <li>
        <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" class="btn btn-sm btn-default">>></a>
    </li>        
    {% endif %}

{% endif %}

</ul>
</div>